# GuardWell Server Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3001
NODE_ENV=development
CLIENT_URL=http://localhost:5173

# MySQL Database (Railway will auto-populate these)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=guardwell
MYSQL_USER=root
MYSQL_PASSWORD=

# MQTT Broker for ESP32 devices
# Use a public broker for testing or set up your own
MQTT_BROKER=mqtt://broker.hivemq.com:1883

# JWT Secret for authentication (generate a random string)
JWT_SECRET=your-super-secret-jwt-key-change-this

# SendGrid Email Configuration
# Get your API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here
SENDGRID_FROM_EMAIL=alerts@guardwell.com
SENDGRID_FROM_NAME=GuardWell Alerts

# Web Push VAPID Keys
# Generate keys with: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=your-vapid-public-key-here
VAPID_PRIVATE_KEY=your-vapid-private-key-here
VAPID_SUBJECT=mailto:admin@guardwell.com
