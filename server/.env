# GuardWell Server Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3001
NODE_ENV=development
CLIENT_URL=http://localhost:5173

# MySQL Database (Railway will auto-populate these)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=guardwell
MYSQL_USER=root
MYSQL_PASSWORD=

# MQTT Broker for ESP32 devices
# Use a public broker for testing or set up your own
MQTT_BROKER=mqtt://broker.hivemq.com:1883

# JWT Secret for authentication (generate a random string)
JWT_SECRET=your-super-secret-jwt-key-change-this

# SendGrid Email Configuration
# Get your API key from: https://app.sendgrid.com/settings/api_keys
# Web Push VAPID Keys (Generated - DO NOT SHARE PRIVATE KEY)

